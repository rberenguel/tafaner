{
  "manifest_version": 3,
  "name": "Tafaner",
  "version": "0.1.0",
  "description": "Triggers a localhost action when a message is sent to self on WhatsApp.",
  "permissions": ["scripting", "tabs", "storage"],
  "host_permissions": ["https://web.whatsapp.com/", "http://localhost/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/"],
      "js": ["content.js"]
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_icon": {
      "128": "icon128.png"
    }
  },
  "icons": {
    "128": "icon128.png"
  }
}
